<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_chat_img_width"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="@dimen/item_chat_img_width"
        android:layout_height="@dimen/item_chat_img_width"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/item_chat_content_marginLeft"
        android:layout_marginRight="@dimen/item_chat_content_marginTop"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_new" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_chat_text_margin"
                android:layout_marginRight="@dimen/item_chat_text_margin"
                android:layout_toRightOf="@+id/iv_status"
                android:text="$100"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textSize_medium" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/item_chat_text_margin"
                android:text="2 minutes ago"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_textSize_tiny" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_chat_text_margin"
            android:layout_marginTop="@dimen/item_chat_text_margin" >

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/item_chat_avatar_width"
                android:layout_height="@dimen/item_chat_avatar_width"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/item_chat_text_margin"
                android:layout_toLeftOf="@+id/tv_count"
                android:layout_toRightOf="@+id/iv_avatar"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Username666"
                android:textColor="@color/black"
                android:textSize="@dimen/default_textSize_medium" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_chat_text_margin"
                android:layout_marginRight="@dimen/item_chat_text_margin"
                android:layout_toLeftOf="@+id/iv_arrow"
                android:background="@drawable/ic_count_big"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/default_textSize_medium" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_arrow" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="I can be there around 2:30 pm. Is it ok with you?"
            android:textColor="@color/black"
            android:textSize="@dimen/default_textSize_medium" />
    </LinearLayout>

</LinearLayout>